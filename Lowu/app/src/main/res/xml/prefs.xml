<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="correct"
        android:summary="Are these preferences correct?"
        android:title="Correct?" />
    <PreferenceCategory
        android:summary="Git repository"
        android:title="Git repository">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="git_has_url"
            android:summary="Link to remote repository"
            android:title="Has remote" />
        <EditTextPreference
            android:key="git_branch"
            android:summary="Branch in local repository"
            android:title="Git branch" />
        <EditTextPreference
            android:key="git_url"
            android:summary="URL of remote repository"
            android:title="Git URL" />
        <EditTextPreference
            android:key="git_name"
            android:summary="User name for repository"
            android:title="Git user name" />
        <EditTextPreference
            android:key="git_email"
            android:summary="User email for repository"
            android:title="Git email" />
    </PreferenceCategory>
    <PreferenceCategory
        android:summary="Other preferences"
        android:title="Other">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="slurp_ssh"
            android:summary="Slurp SSH"
            android:title="Slurp SSH" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="auto_link"
            android:summary="Auto link"
            android:title="Auto link" />
        <EditTextPreference
            android:key="repo_name"
            android:summary="Name for local files"
            android:title="Repo name" />
        <EditTextPreference
            android:defaultValue="a"
            android:key="unique_prefix"
            android:summary="Unique prefix"
            android:title="Prefix" />
    </PreferenceCategory>
</PreferenceScreen>